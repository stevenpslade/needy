<div class="row">
  <%= form_for @user do |f| %>
  <form class="col s6">
    <% if @user.errors.any? %>
    <%= pluralize(@user.errors.count, "error") %> prevented the account from being created:
    <ul>
      <% @user.errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :username, class: "validate" %>
        <%= f.label :username %>
      </div>
      <div class="input-field col s3">
        <%= f.text_field :first_name, class: "validate" %>
        <%= f.label :first_name %>
      </div>
      <div class="input-field col s3">
        <%= f.text_field :last_name, class: "validate" %>
        <%= f.label :last_name %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.email_field :email, class: "validate" %>
        <%= f.label :email %>
      </div>
      <div class="input-field col s6">
        <%= f.text_field :profile_image_url, class: "validate" %>
        <%= f.label :profile_image_url, class: 'active' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.date_field :birth_date, class: "datepicker" %>
        <%= f.label :birth_date %>
      </div>
      <div class="input-field col s6">
        <%= f.telephone_field :phone, length: 12 %>
        <%= f.label :phone %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s8">
        <%= f.password_field :password, class: "validate" %>
        <%= f.label :password %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s8">
        <%= f.password_field :password_confirmation, class: "validate" %>
        <%= f.label :password_confirmation %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :bio, class: "materialize-textarea" %>
        <%= f.label :bio %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :skills, class: "validate" %>
        <%= f.label :skills %>
      </div>
      <div class="input-field col s6">
        <%= f.text_field :city, class: "validate" %>
        <%= f.label :city %>
      </div>
    </div>
    <div class="row">
      <button class="btn waves-effect waves-light" type="submit" name="action">
        <i class="material-icons right"></i><%= f.submit %>
      </button>
    </div>
  </form>
<% end %>

</div>