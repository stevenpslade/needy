<div class="row">
  <%= form_for @user, :html => {:class => "col s12"} do |f| %>
    <% if @user.errors.any? %>
    <%= pluralize(@user.errors.count, "error") %> prevented the account from being created:
    <ul>
      <% @user.errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :profile_image_url, class: "validate" %>
        <%= f.label :profile_image_url, class: 'active' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :username, class: "validate" %>
        <%= f.label :username, class: 'active' %>
      </div>
      <div class="col s6">
        <%= image_tag(@user.profile_image_url, class: "form-image") %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :skills, class: "validate" %>
        <%= f.label :skills, class: 'active' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :first_name, class: "validate" %>
        <%= f.label :first_name, class: 'active' %>
      </div>
      <div class="input-field col s6">
        <%= f.text_field :last_name, class: "validate" %>
        <%= f.label :last_name, class: 'active' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.email_field :email, class: "validate" %>
        <%= f.label :email, class: 'active' %>
      </div>
      <div class="input-field col s6">
        <%= f.date_field :birth_date, class: "datepicker" %>
        <%= f.label :birth_date, class: 'active' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :bio, class: "materialize-textarea" %>
        <%= f.label :bio, class: 'active' %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :city, class: "validate" %>
        <%= f.label :city, class: 'active' %>
      </div>
      <div class="input-field col s6">
        <%= f.telephone_field :phone, length: 12 %>
        <%= f.label :phone, class: 'active' %>
      </div>
    </div>
    <div class="row">
      <button class="btn waves-effect waves-light" type="submit" name="action">
        <i class="material-icons right"></i><%= f.submit %>
      </button>
    </div>
<% end %>

</div>