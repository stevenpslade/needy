  </div>

  <div class="row">
    <div class="col s12">
      <div class="card task-icons blue-grey darken-1">
          <div class="col s4">
            <i class="material-icons large">tune</i>
            <p><%= @task.difficulty %></p>
          </div>
          <div class="col s4">
            <i class="material-icons large">access_alarms</i>
            <p><%= @task.estimated_duration %> min</p>
          </div>
          <div class="col s4">
            <i class="material-icons large">adb</i>
            <p>$<%= @task.compensation %></p>
          </div>
        <div class="card-action">
          <button id="start" class="activator">Start Task</button>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Elapsed Task Time<i class="material-icons right">close</i></span>
          <span id="time">00:00:00</span>
