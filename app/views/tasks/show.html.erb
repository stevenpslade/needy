<div class="container">
  <div class="row">
    <div class="top-content col s4">
      <img class="task-user-image" src="http://cdn.okccdn.com/php/load_okc_image.php/images/0x0/0x0/0/3133668790142149848.jpeg___1_500_1_500_cb94de6a_.png"/>
    </div>
    <div class=" top-content col s4">
        <img class="task-map-image" src ="http://mike.teczno.com/img/google-maps-track.png"/>
    </div>
    <div class=" top-content col s4">
      <% all_requests = Request.where(task_id: @task.id) %>
      <p>There are currently <%= all_requests.count %> users requesting to do this job!</p>
      <p><small>| 
        <% all_requests.each do |request| %>
          <%= User.find(request.user_id).full_name %> | 
        <% end %>
        </small>
      </p>
    </div>
  </div>

  <div class="row task-icons">
    <div class="col s12">
      <div class="card blue-grey darken-1">
          <div class="col s4">
            <i class="material-icons large">tune</i>
            <p><%= @task.difficulty %></p>
          </div>
          <div class="col s4">
            <i class="material-icons large">access_alarms</i>
            <p><%= @task.estimated_duration %> min</p>
          </div>
          <div class="col s4">
            <i class="material-icons large">adb</i>
            <p>$<%= @task.compensation %></p>
          </div>
        <div class="card-action">
          <a id="start">Start Task</a>
        </div>
      </div>
    </div>
  </div>
