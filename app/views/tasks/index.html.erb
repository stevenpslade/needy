<div class="container">
  <h3>Show me the NEEDS</h3>
  <div class="row">
    <% @tasks.each do |task| %>
      <div class="col s4">
        <div class="index-card card small">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator responsive-img"><%= image_tag(task.image_url) %>
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= link_to task.title, task_path(task) %><i class="material-icons right">more_vert</i></span>
            <p><small>by: <%= User.find(task.user_id).full_name %></small></p>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= task.title %><i class="material-icons right">close</i></span>
            <p class="card-attr"><span>Est Duration: </span><%= task.estimated_duration %></p>
            <p class="card-attr"><span>Difficulty: </span><%= task.difficulty %></p>
            <p class="card-attr"><span>Category: </span><%= task.category %></p>
            <p class="card-attr"><span>Compensation: </span><%= task.compensation %></p>
            <p class="card-attr"><span>Description: </span><%= task.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>