<%= form_for @task do |f| %>
<div class="row">
  <form class="col s6">
    <div class="error-field">
    <% if @task.errors.any? %>
      <%= pluralize(@task.errors.count, "error") %> prevented the task from being created:
      <ul>
        <% @task.errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :title, class: "validate" %>
        <%= f.label :title %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
      <%= f.text_area :description, class: "materialize-textarea", rows: "4" %>
      <%= f.label :description %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s4">
        <%= f.radio_button :difficulty, "easy" %>
        <%= f.label(:difficulty_easy, "Easy") %>
      </div>
      <div class="input-field col s4">
        <%= f.radio_button :difficulty, "medium" %>
        <%= f.label(:difficulty_medium, "Medium") %>
      </div>
      <div class="input-field col s4">    
        <%= f.radio_button :difficulty, "hard" %>
        <%= f.label(:difficulty_hard, "Hard") %>
      </div>
    </div>
    <div class="input-field col s6">
      <%= f.text_field :estimated_duration, class: "validate" %>
      <%= f. label :estimated_duration %>
    </div>   
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :category, class: "validate" %>
        <%= f.label :category %>
      </div>
      <div class="input-field col s6">
        <%= f.text_field :compensation, class: "validate" %>
        <%= f.label :compensation %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s4">
        <%= f.date_field :due_date, class: "datepicker" %>
        <%= f.label :due_date %>
      </div>
      <div class="input-field col s4">
        <%= f.text_field :image_url, class: "validate" %>
        <%= f.label :image_url %>
      </div>
       <div class="input-field col s4">
        <%= f.text_field :video_url, class: "validate" %>
        <%= f.label :video_url %>
      </div>
    </div>
    <div class="row">
      <button class="btn waves-effect waves-light" type="submit" name="action">
        <i class="material-icons right"></i><%= f.submit %>
      </button>
    </div>
  </form>
  <% end %>
</div>

</div>