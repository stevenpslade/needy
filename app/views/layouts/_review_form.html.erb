<%= form_for [@task, @review] do |f| %>
<div class="row">
  <form class="col s8">
    <div class="error-field">
    <% if @task.errors.any? %>
      <%= pluralize(@task.errors.count, "error") %> prevented the task from being created:
      <ul>
        <% @task.errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <h5>Review for <%= @review_user %></h5>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :content, id: "textarea1", class: "materialize-textarea" %>
        <%= f.label :content %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
      <%= f.range_field :rating, :in => 0..5, :step => '.1' %>
      <%= f.label :rating %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
      <div class="waves-effect waves-light btn green"><%= f.submit %><i class="material-icons">add</i></div>
      </div>
    </div>
    <% end %>
  </form>
</div>